        "summary": "Bookmark an article",
        "description": "This helps the user bookmark an article for reading it later",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "description": "Article's slug",
            "schema": {
              "$ref": "#/definitions/Article"
            }
          }
        ],
        "responses": {
          "201": {
